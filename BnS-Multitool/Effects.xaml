        <Grid x:Name="ProgressGrid" Visibility="Hidden">
            <StackPanel x:Name="ProgressPanel">

            </StackPanel>
        </Grid>
        <Grid x:Name="ExtendedOptions_EffectMover" Visibility="Hidden">
            <DataGrid HorizontalScrollBarVisibility="Hidden" HeadersVisibility="Column"
                              CanUserAddRows="True" CanUserDeleteRows="True"
                              x:Name="EffectList" AutoGenerateColumns="False"
                              CellStyle="{StaticResource DataGrid_Content_Centering}"
                              ItemsSource="{Binding EffectsList}" Margin="10,10,10,221" BorderBrush="{x:Null}" Background="#FF1D2630">
                <DataGrid.Resources>
                    <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FF293642"/>
                    <Style TargetType="{x:Type DataGridCell}">
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="BorderBrush" Value="#FF1B2E3E"/>
                        <Setter Property="BorderThickness" Value="1 1 1 1"/>
                        <Style.Triggers>
                            <Trigger Property="DataGridCell.IsSelected" Value="True">
                                <Setter Property="Background" Value="#FF293642" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>

                    <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}" >
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="BorderBrush" Value="#FF1B2E3E"/>
                        <Setter Property="BorderThickness" Value="1 1 1 1"/>
                        <Setter Property="BorderThickness" Value="1 1 1 1"/>
                        <Setter Property="Margin" Value="-1,-1,0,0" />
                        <Setter Property="Height" Value="28" />
                        <Setter Property="Width" Value="auto"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    </Style>

                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Alias" Binding="{Binding Alias}" Width="*"/>
                    <DataGridComboBoxColumn Header="ui-slot" SelectedItemBinding="{Binding UI_Slot}" EditingElementStyle="{StaticResource EditingCombo}" ItemsSource="{Binding Source={StaticResource e_ui_slots}}" Width="100"/>
                    <DataGridComboBoxColumn Header="ui-category" SelectedItemBinding="{Binding UI_Category}" EditingElementStyle="{StaticResource EditingCombo}" ItemsSource="{Binding Source={StaticResource e_ui_category}}" Width="125"/>
                </DataGrid.Columns>
            </DataGrid>
            <Label Content="What is this?" Margin="0,274,10,178" Foreground="CornflowerBlue" FontWeight="Bold" FontSize="22"/>
            <TextBlock Margin="10,312,10,10" Foreground="White" FontWeight="Normal" FontSize="14">
                This allows you to move effect icons around to different buff bars or to change the priority.
                <LineBreak/>
                <Run FontWeight="Bold" Foreground="CornflowerBlue">ui-slot:</Run>
                <LineBreak/>
                <Run FontSize="12">None = Invisible</Run>
                <LineBreak/>
                <Run FontSize="12">Buff = Blue Bar</Run><LineBreak/>
                <Run FontSize="12">Debuff = Red Bar</Run><LineBreak/>
                <Run FontSize="12">System = Small icon bar (4-6 slots)</Run>
                <LineBreak/>
                <Run FontSize="12">Long-term = Premium Buff / Food buffs / Clan Bonus etc</Run><LineBreak/>
                <Run FontSize="12">Buff Disable = Purple Bar</Run><LineBreak/>
                <Run FontWeight="Bold" Foreground="CornflowerBlue">ui-category:</Run><LineBreak/><Run FontSize="12">This is the priority it has on the buff bar, it is in order after None.</Run>
            </TextBlock>
            <Button Style="{StaticResource MainButtonStyle}"  Visibility="Visible" Content="Close" Margin="582,450,10,14" Click="CloseEffectList" FontWeight="Bold" FontFamily="Segoe UI Semibold" RenderTransformOrigin="0.456,0.82"/>
